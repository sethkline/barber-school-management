# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

aws_region   = "us-east-1"
project_name = "barber-school"
environment  = "prod"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# RDS Configuration
rds_instance_class    = "db.t4g.micro"
rds_allocated_storage = 20

# ECS Configuration
image_tag         = "latest"
ecs_cpu           = 256
ecs_memory        = 512
ecs_desired_count = 1

# ALB Configuration
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxx"

# Cognito Configuration
cognito_callback_urls = ["https://your-domain.com/auth/callback"]
cognito_logout_urls   = ["https://your-domain.com/login"]

# S3 Configuration (leave empty for auto-generated name)
s3_bucket_name = ""

# SNS Configuration
sns_monthly_spend_limit = 10

# Domain & SES Configuration
# Set domain_name to enable Route 53, ACM certificate, and SES domain verification
# Leave empty to skip DNS/HTTPS setup (app will be accessible via ALB DNS only)
domain_name    = "your-domain.com"
ses_from_email = "noreply@your-domain.com"

# GitHub Configuration
github_org  = "your-github-username-or-org"
github_repo = "barber-school"
